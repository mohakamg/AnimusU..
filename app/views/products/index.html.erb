<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Categories</th>
      <th>Name</th>
      <th>Price</th>
      <th>Sale price</th>
      <th>Tags</th>
      <th>Rentable</th>
      <th>Description</th>
      <th>Rentable per month price</th>
      <th>Exchange price</th>
      <th>Rentable down deposit</th>
      <th>Product reference url</th>
      <th>Visible</th>
      <th>Handle</th>
      <th>Vendor</th>
      <th>Material</th>
      <th>Variant sku</th>
      <th>Avg weight gms</th>
      <th>Service provider</th>
      <th>Service type</th>
      <th>Brand</th>
      <th>Image url</th>
      <th>Variants</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.categories %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.sale_price %></td>
        <td><%= product.tags %></td>
        <td><%= product.rentable %></td>
        <td><%= product.description %></td>
        <td><%= product.rentable_per_month_price %></td>
        <td><%= product.exchange_price %></td>
        <td><%= product.rentable_down_deposit %></td>
        <td><%= product.product_reference_url %></td>
        <td><%= product.visible %></td>
        <td><%= product.handle %></td>
        <td><%= product.vendor %></td>
        <td><%= product.material %></td>
        <td><%= product.variant_SKU %></td>
        <td><%= product.avg_weight_gms %></td>
        <td><%= product.service_provider %></td>
        <td><%= product.service_type %></td>
        <td><%= product.brand %></td>
        <td><%= product.image_url %></td>
        <td><%= product.variants %></td>
        <td><%= product.color %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

