<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag 'https://images.unsplash.com/photo-1444881421460-d838c3b98f95?dpr=1&auto=compress,format&fit=crop&w=1789&h=&q=80&cs=tinysrgb&crop=', class: "d-block img-fluid" %>
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="https://images.unsplash.com/photo-1454367021904-b6a8d452fc48?dpr=1&auto=compress,format&fit=crop&w=1650&h=&q=80&cs=tinysrgb&crop=" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="https://images.unsplash.com/photo-1505238680356-667803448bb6?dpr=1&auto=compress,format&fit=crop&w=1650&h=&q=80&cs=tinysrgb&crop=" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<br><br>

<div class="container">

  <h3>Hot Categories</h3>
  <div class="categories">
    <% Category.all.each do |c| %>
      <div class="hot_cat">
        <%= image_tag c.category_image_url, class: "large_img" %> <br>
        <h4><%= c.product_type %></h4>
      </div>
    <% end %>
  </div>

  <h3>Featured Watches</h3>
  <% Category.first.products.each do |p| %>
    <div class="product-home">
      <div class="product">
      <div class="info-large">
          	<h4><%= p.name %></h4>


              <div class="price-big">
              	<span>$<%= p.price %></span> $<%= p.price %>
              </div>


              <button class="add-cart-large">Add To Cart</button>

          </div>
          <div class="make3D">
              <div class="product-front">
                  <div class="shadow"></div>
                  <% if p.product_images[0] != nil %>
                    <%= image_tag p.product_images[0] %>
                  <% end %>
                  <div class="image_overlay"></div>
                  <div class="add_to_cart">Add to cart</div>
                  <div class="view_gallery">View gallery</div>
                  <div class="stats">
                      <div class="stats-container">
                          <span class="product_price">$<%= p.price %></span>
                          <span class="product_name"><%= p.name %></span>
                          <p><%= p.category.product_type %></p>

                      </div>
                  </div>
              </div>

              <div class="product-back">
                  <div class="shadow"></div>
                  <div class="carousel">
                      <ul class="carousel-container">
                        <% p.image_url.each do |i| %>
                          <% if (i != nil) && ((i.include? 'https://') || (i.include? 'http://')) && !(i.include? 'bitmap')   %>
                            <% i = i.delete(' ') %>
                            <li><%= image_tag i %></li>
                            <%= image_tag i %>
                          <% end %>
                        <% end %>
                      </ul>
                      <div class="arrows-perspective">
                          <div class="carouselPrev">
                              <div class="y"></div>
                              <div class="x"></div>
                          </div>
                          <div class="carouselNext">
                              <div class="y"></div>
                              <div class="x"></div>
                          </div>
                      </div>
                  </div>
                  <div class="flip-back">
                      <div class="cy"></div>
                      <div class="cx"></div>
                  </div>
              </div>
          </div>
      </div>
    </div>
  <% end %>
</div>
